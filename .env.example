# ==============================================================================
# JF Monitor - Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================================================
# DATABASE
# ==============================================================================
# For Vercel Postgres (Recommended):
# - Go to your Vercel project → Storage → Create Database
# - Connection string is automatically added to your project
# - No manual configuration needed for production
#
# For local development:
# - Set up a local Postgres database
# - Or use a cloud provider (Vercel Postgres, Supabase, etc.)
DATABASE_URL="postgresql://user:password@localhost:5432/jf_monitor?schema=public"

# Alternative: Vercel Postgres (auto-configured in production)
# DATABASE_URL="postgres://username:password@db.prisma.io:5432/postgres?sslmode=require"

# ==============================================================================
# MONITORING & ALERTS
# ==============================================================================

# Brevo API Key (Optional - for email alerts)
# Get your API key from: https://app.brevo.com/settings/keys/api
# Free tier: 300 emails/day
BREVO_API_KEY=""

# Telegram Bot Configuration (Optional - for Telegram alerts)
# 1. Chat with @BotFather on Telegram
# 2. Send /newbot and follow instructions
# 3. Copy the bot token below
# 4. Start a chat with your bot and send any message
# 5. Get your chat ID: curl https://api.telegram.org/bot<TOKEN>/getUpdates
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# ==============================================================================
# SECURITY
# ==============================================================================

# Cron Secret - Used to authenticate monitoring endpoint
# Generate a random secret (32+ characters recommended):
# - Node.js: require('crypto').randomBytes(32).toString('hex')
# - Online: https://generate-secret.vercel.app/32
# This must match the CRON_SECRET in your GitHub repository secrets
CRON_SECRET=""

# NextAuth Secret (Future - for user authentication)
# Generate: openssl rand -base64 32
NEXTAUTH_SECRET=""

# ==============================================================================
# APPLICATION
# ==============================================================================

# Application URL
# Development: http://localhost:3000
# Production: https://your-app.vercel.app
APP_URL="http://localhost:3000"

# Node Environment
# Options: development | production | test
NODE_ENV="development"

# ==============================================================================
# OPTIONAL CONFIGURATION
# ==============================================================================

# Maximum websites to monitor (default: 3)
# MAX_WEBSITES=3

# Data retention in days (default: 90)
# DATA_RETENTION_DAYS=90

# Default check frequency in seconds (default: 300 = 5 minutes)
# DEFAULT_CHECK_FREQUENCY=300

# Default change threshold percentage (default: 10)
# DEFAULT_CHANGE_THRESHOLD=10

# Request timeout in milliseconds (default: 30000 = 30 seconds)
# REQUEST_TIMEOUT=30000

# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================

# Enable debug logging (development only)
# DEBUG=true

# Prisma Studio (development only)
# Open with: npx prisma studio
# Default port: 5555

# ==============================================================================
# NOTES
# ==============================================================================
# - For production deployment on Vercel, set these as Environment Variables
#   in your project settings: https://vercel.com/docs/environment-variables
#
# - GitHub Actions requires APP_URL and CRON_SECRET as repository secrets:
#   Settings → Secrets and variables → Actions
#
# - All environment variables can be managed via Vercel CLI:
#   vercel env add <NAME> [environment]
#   vercel env pull
#
# - Never expose sensitive values in client-side code
#   Only process.env variables prefixed with NEXT_PUBLIC_ are exposed
# ==============================================================================
